<!DOCTYPE html>
<html lang="en">
<!--guardar esta vista para clientes-->

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/product.css">
    <title>Gorriao - Producto</title>
    <%- include('parciales/head') %>
</head>

<body>

    <%- include('parciales/header') %>

    <figure class="banner-1">
        <img src="img/gorrabanner.jpg" class="bannerdestacado">
    </figure>

    <div class="categorias">
        <div class="box">
            <a href="/gorras">GORRAS</a>
            <a href="/aritos" class="left">ARITOS</a>
            <a href="/cinturones" class="left">CINTURONES</a>
            <a href="/colgantes" class="left">COLGANTES</a>
            <a href="/bandoleras" class="left">BANDOLERAS</a>
            <a href="/carteras" class="left">CARTERAS</a>
        </div>

    </div>

    <main>
        <!--Listado de Productos-->
        <!--Nueva vista de productos para los clientes-->
        <section class="cajaproductos">
            <% productosL.forEach(producto => { %>
                <article class="producto">
                    <a href="/products/prodDetail/<%= producto.id %>">
                        <img src="/images/productos/<%= producto.urlImagen %>" alt="<%= producto.nombre %>">
                    </a>
                    <h3 class="nombreprodu"><%= producto.nombre%> </h3>
                    <div class="preciototal">
                        <p id="precios">$<%= producto.precio%> </p>
                    </div>
                </article>
            <% }); %>
        </section>
    </main>
    <script src="https://unpkg.com/ionicons@5.2.3/dist/ionicons.js"></script>
    <%- include('parciales/footer') %>
</body>

</html>